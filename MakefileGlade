#Makefile
CC=gcc

CPPFLAGS= -MMD
CFLAGS= -Wall -Wextra  -std=c99 `pkg-config --cflags gtk+-3.0`
LDLIBS= -lm `pkg-config --libs gtk+-3.0`
LDFLAGS= $(PTHREAD) $(GTKLIB) -export-dynamic

SRC= OCR_project.c
OBJ= ${SRC:.c=.o}
DEP= ${SRC:.c=.d}


all: OCR_project

interface: ${OBJ}

clean:
	${RM} ${OBJ} ${DEP} *~ OCR_project

-include ${DEP}

#END